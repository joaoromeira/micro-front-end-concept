{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": true,    
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,   
    "typeRoots": [
      "./node_modules/@types",
    ],
    "baseUrl": "./",
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules"]
}